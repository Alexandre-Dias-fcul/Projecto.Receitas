@page
@model Projecto.Receitas.WebApp.Pages.Administracao.AdicionarImagemReceitaModel
@{
    ViewData["Title"] = "Adicionar Imagem";
}

@section pesquisa
{
    <partial name="_semPesquisa" />
}

@section navegacao
{
    <partial name="_navAdministracao" />
}

<div class="container fundo_admin h-100">
    <div class="row p-5">
        <div class="col-2"></div>
        <div class="col-10">
            <div class="card container_dimensoes">
                <div class="card-header text-center bg-dark text-white">
                    <h3>Alterar Categoria Categoria</h3>
                </div>
                <div class="card-body bg-secondary bg-opacity-50 bg-gradient">
                    <div class="row">
                        <div class="col-10">
                            <div class="row">
                                <div class="col-2"></div>
                                <div class="col-10">
                                    <form method="post" enctype="multipart/form-data">
                                        <div class="form-group row m-3">
                                            <input asp-for="Imagem" type="file" class="col-8 form-control" />
                                        </div>
                                        <div class="row">
                                            <span asp-validation-for="Imagem" class="col-md-12 text-danger"></span>
                                        </div>
                                        <input asp-for="IdReceita" type="hidden" />
                                        <input asp-for="IdPagina" type="hidden" />
                                        <input asp-for="Texto" type="hidden" />
                                        <div class="row m-4">
                                            <a asp-page="/Administracao/VerReceita" asp-route-idReceita="@Model.IdReceita"
                                               class="col-4 btn btn-dark" asp-route-texto="@Model.Texto">Voltar</a>
                                            <div class="col-4"></div>
                                            <button type="submit" class="col-4 btn btn-secondary">Guardar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
