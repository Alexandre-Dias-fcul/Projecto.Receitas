@page
@model Projecto.Receitas.WebApp.Pages.Login.RegistarModel
@{
    ViewData["Title"] = "Fazer Registo";
}

@section pesquisa
{
    <partial name="_pesquisaIndex" />
}

@section navegacao
{
    <partial name="_navAnonimo" />
}

<div class="container_login fundo_login">
    <div class="moldura_login">
        <h3 class="m-3">Registar</h3>
        <form method="post">
            <div class="row">
                <div class="col-12 text-danger">@Model.MensagemErro</div>
            </div>
            <div class="form-group row m-3">
                <div class="input-group col-md-12">
                    <span class="input-group-text">Primeiro Nome</span>
                    <input asp-for="Registo.PrimeiroNome" class="form-control" />
                </div>
              </div>
            <div class="row">
                <span asp-validation-for="Registo.PrimeiroNome" class="col-12 text-danger"></span>
            </div>
            <div class="form-group row m-3">
                <div class="input-group col-md-12">
                    <span class="input-group-text">Ùltimo Nome</span>
                    <input asp-for="Registo.UltimoNome" class="form-control" />
                </div>
              </div>
            <div class="row">
                <span asp-validation-for="Registo.UltimoNome" class="col-12 text-danger"></span>
            </div>
              <div class="form-group row m-3">
                  <div class="input-group col-md-12">
                    <span class="input-group-text">Username</span>
                    <input asp-for="Registo.Username" class="form-control"/>  
                  </div>
              </div>
              <div class="row">
                <span asp-validation-for="Registo.Username" class="col-12 text-danger"></span>
              </div>
              <div class="form-group row m-3">
                  <div class="input-group col-md-12">
                    <span class="input-group-text">Password</span>
                    <input asp-for="Registo.Password" type="password" class="form-control"  placeholder="Password"/>           
                  </div>   
              </div>
              <div class="row">
                <span asp-validation-for="Registo.Password" class="col-12 text-danger"></span>
              </div>           
              <div class="form-group row m-3">
                  <div class="input-group col-md-12">
                    <span class="input-group-text">Confirmar</span>
                    <input asp-for="Registo.ConfirmPassword" type="password" class="form-control" placeholder="Confirmar Password" /> 
                  </div>
              </div>
              <div class="row">
                <span asp-validation-for="Registo.ConfirmPassword" class="col-12 text-danger"></span>
              </div>
              <div class="row mb-5 mt-2">
                <div class="col-1"></div>
                <a class="col-3 btn btn-dark" asp-page="/Login/IniciarSessao">Iniciar Sessão</a>
                <div class="col-4"></div>
                <button type="submit" class="col-3 btn btn-secondary">Enviar</button>
              </div>
        </form>
    </div>
</div>


